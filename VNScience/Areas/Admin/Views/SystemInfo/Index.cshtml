@model VNScience.ViewModels.SystemInfoViewModel
@using VNScience.Common

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 no-padding">
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Tên công ty</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("EditBrand", "SystemInfo", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <button class="btn btn-success pull-right" type="submit"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Liên hệ tuyển dụng</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("EditRecruitmentInfo", "SystemInfo", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <textarea name="RecruitmentInfo" id="js-recruitment-info">
                                        @Model.RecruitmentInfo
                                    </textarea>
                                @Html.ValidationMessageFor(model => model.RecruitmentInfo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success pull-right" type="submit"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 no-padding">
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Logo</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("EditLogo", "SystemInfo", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <img class="img-thumbnail" src="@(string.IsNullOrEmpty(Model.Logo)?Constants.AvatarPlaceholderUrl:Model.Logo)" style="width: 80px" alt="Logo" />
                            </div>
                            <div class="form-group">
                                <input type="file" id="Logo" name="Logo" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success pull-right" type="submit"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Thông tin liên hệ của công ty</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("EditContactInfo", "SystemInfo", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <textarea name="ContactInfo" id="js-contact-info">
                                        @Model.ContactInfo
                                    </textarea>
                                @Html.ValidationMessageFor(model => model.ContactInfo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success pull-right" type="submit"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    <script src="//cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>

    <script>
        var editor = CKEDITOR.replace('js-recruitment-info');
        var contactInfo = CKEDITOR.replace('js-contact-info');
    </script>
}