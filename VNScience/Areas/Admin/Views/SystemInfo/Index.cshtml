    </div>
    <div class="col-md-6 no-padding">
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Logo</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("EditLogo", "SystemInfo", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <img class="img-thumbnail" src="@(string.IsNullOrEmpty(Model.Logo)?Constants.AvatarPlaceholderUrl:Model.Logo)" style="width: 80px" alt="Logo" />
                            </div>
                            <div class="form-group">
                                <input type="file" id="Logo" name="Logo" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success pull-right" type="submit"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Liên kết mạng xã hội</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("EditSocialLink", "SystemInfo", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Facebook</label>
                                <input type="text" name="Facebook" value="@Model.Facebook" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Facebook, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Linkedin</label>
                                <input type="text" name="Linkedin" value="@Model.Linkedin" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Linkedin, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Youtube</label>
                                <input type="text" name="Youtube" value="@Model.Youtube" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Youtube, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success pull-right" type="submit"><i class="fa fa-save"></i> Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    <script src="//cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>

    <script>
        var editor = CKEDITOR.replace('js-recruitment-info');
        var contactInfo = CKEDITOR.replace('js-contact-info');
    </script>
